package demo

object MapDemo {
  def main(args: Array[String]): Unit = {
    val scores = Map("Tom"->80,"Marry"->85,"Mike"->82)
    println(scores)
    
    println(scores("Tom"))
    println(scores.get("Tom"))
    
    if(scores.contains("Bob")){
      println(scores("Bob"))
    } else {
      println("No this key")
    }
    
    scores("Tom") = 100
    
    println(scores.getOrElse("Tom", -1))
    println(scores.getOrElse("Bob", -1))
  }
}