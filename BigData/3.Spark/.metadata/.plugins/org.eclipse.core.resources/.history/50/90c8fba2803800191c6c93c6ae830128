package demo

object function {
  def main(args: Array[String]): Unit = {
    // call by value ï¼š (calculate first and only once)
    // call by name  :=> (every time when the parameter is used, calculate)
    
    // set default value
    def func(name:String="Tom"):String = "Hello " + name
    println(func("Marry"))
    println(func())
  }
}