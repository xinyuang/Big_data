package classDemo

object abstractFieldDemo {
  var p = new Employee2(123,"Tom")
  println(p.id)
  
}

abstract class Person1{
  val id:Int
  val name:String
}

abstract class Employee1 extends Person1{
  
}

class Employee2 extends Person1{
  val id:Int
  val name:String
  //(val id:Int, val name:String)
}